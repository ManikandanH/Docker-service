{
  "compilerOptions": {
    "experimentalDecorators": true,
    "sourceMap": true,
    "module": "ES2022",
    "allowJs": false,
    "noImplicitAny": false,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "lib": ["ES2021"],
    "target": "ES2021",
    "incremental": true,
    "assumeChangesOnlyAffectDirectDependencies": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node"
  }
}
